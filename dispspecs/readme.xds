<?xml version="1.0"?>
<dispspec>

	<metadata>
		<name xml:lang="en">Experimental "readme" format</name>
		<description xml:lang="en">This is a document type associated with the "readme" file distributed with the initial prototype of Conglomerate.</description>
	</metadata>
	<document-models>
	</document-models>
	<element-list>
		<element localName="document" type="structural" color="a0b0c0">
			<name xml:lang="en">Document</name>
		</element>

		<!-- Wow - we can have comments in this version of the format -->

		<!-- Why did introduction have two color values? (second value was c1cdc1) -->
		<!-- Should all translatable stuff go into po files? -->
		<!-- What does collapseto mean? -->

		<element localName="introduction" type = "structural" color = "e0eee0">
			<name xml:lang="en">Introduction</name>
		</element>

		<element localName="section" type = "structural" color = "a0b0c0">
			<name xml:lang="en">Section</name>
		</element>

		<element localName="section.title" type = "structural">
			<name xml:lang="en">Title</name>
		</element>

		<element localName="section.signature" type = "structural">
			<name xml:lang="en">Signature</name>
		</element>

		<!-- Here come the spans: -->

		<element localName="quote" type = "span" color = "8b0000">
			<name xml:lang="en">Quote</name>
		</element>

		<element localName="admission" type = "span" color = "b22222">
			<name xml:lang="en">Admission</name>
		</element>

		<element localName="excuse" type = "span" color = "b22222">
			<name xml:lang="en">Excuse</name>
		</element>

		<element localName="corporate" type = "span" color = "00008b">
			<name xml:lang="en">Corp jargon</name>
		</element>

		<element localName="disclaimer" type = "span" color = "698b22">
			<name xml:lang="en">Disclaimer</name>
		</element>

		<element localName="emph" type = "span" color = "cd1076">
			<name xml:lang="en">Emphasis</name>
		</element>

		<element localName="inspirational" type = "span" color = "08b8b">
			<name xml:lang="en">Inspirational</name>
		</element>

		<element localName="optimistic" type = "span" color = "458b74">
			<name xml:lang="en">Optimistic</name>
		</element>

		<element localName="p" type = "structural">
			<name xml:lang="en">Paragraph</name>
		</element>
		

	</element-list>

</dispspec>

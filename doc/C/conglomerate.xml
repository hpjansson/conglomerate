      <sect3 id="structural">
        <title>Structural</title>
        <example>
          <title>Structural Element</title>
          <programlisting>
&lt;element tag=&quot;introduction&quot; type=&quot;structural&quot; color=&quot;e0eee0&quot;&gt;
